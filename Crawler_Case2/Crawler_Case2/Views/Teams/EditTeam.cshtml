@model Crawler_Case2.Models.Teams
@{
    ViewBag.Title = "EditTeam";
    Layout = "~/Views/Shared/_layoutView.cshtml";
}

<div>
    <form class="form-group " method="post" enctype="multipart/form-data">
        @using (Html.BeginForm("EditTeam", "Teams", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group ">
                @Html.Label("Takım Adı")
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleFormControlFile1">Fotoğraf Yükleyiniz</label>
                <input class=" gd-files" type="file" name="Logo" id="exampleFormControlFile1">
                @*@Html.Label("Fotoğraf Yükleyiniz")
            @Html.EditorFor(model=>model.Logo,new { @class="form-control ", type="file"})*@
            </div>
            <div class="form-group">
                @Html.Label("Teknik Direktör")
                @Html.TextBoxFor(model => model.Coach, new { @class = "form-control" })
            </div>
            <input class="btn btn bg-success row" type="submit" value="Kaydet" />
        }
    </form>
</div>